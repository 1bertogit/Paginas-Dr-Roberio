---
interface Props {
  /** Google Analytics Measurement ID (e.g., G-XXXXXXXXXX) */
  gaId?: string;
  /** Enable debug mode for development */
  debug?: boolean;
}

const { gaId, debug = false } = Astro.props;

// Only render if gaId is provided
const shouldRender = gaId && gaId.trim() !== '';
---

{shouldRender && (
  <>
    <!-- Google Analytics -->
    <script is:inline define:vars={{ gaId, debug }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', gaId, {
        debug_mode: debug,
        send_page_view: true
      });
    </script>
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>
  </>
)}

{!shouldRender && (
  <!-- Analytics: Configure GA_MEASUREMENT_ID in environment variables -->
)}
