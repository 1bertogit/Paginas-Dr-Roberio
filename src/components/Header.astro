---
interface Props {
  siteName?: string;
}

const { siteName = 'Landing' } = Astro.props;

const navLinks = [
  { href: '/', label: 'Início' },
  { href: '/sobre', label: 'Sobre' },
  { href: '/contato', label: 'Contato' },
];
---
<header class="sticky top-0 z-50 bg-bg/80 backdrop-blur-md border-b border-white/10">
  <nav class="max-w-5xl mx-auto px-[5vw] py-4 flex items-center justify-between">
    <a href="/" class="text-xl font-bold text-text hover:text-accent transition">
      {siteName}
    </a>

    <!-- Desktop Navigation -->
    <ul class="hidden md:flex items-center gap-6">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class="text-slate-300 hover:text-accent transition"
          >
            {link.label}
          </a>
        </li>
      ))}
      <li>
        <a
          href="#cta"
          class="px-4 py-2 bg-accent text-bg font-semibold rounded-xl hover:opacity-90 transition"
        >
          Começar
        </a>
      </li>
    </ul>

    <!-- Mobile Menu Button -->
    <button
      id="menu-toggle"
      class="md:hidden p-2 text-text hover:text-accent transition"
      aria-label="Abrir menu"
      aria-expanded="false"
    >
      <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
      <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </nav>

  <!-- Mobile Navigation -->
  <div
    id="mobile-menu"
    class="md:hidden hidden bg-bg/95 backdrop-blur-md border-b border-white/10"
  >
    <ul class="flex flex-col px-[5vw] py-4 gap-4">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class="block text-slate-300 hover:text-accent transition py-2"
          >
            {link.label}
          </a>
        </li>
      ))}
      <li>
        <a
          href="#cta"
          class="block px-4 py-3 bg-accent text-bg font-semibold rounded-xl hover:opacity-90 transition text-center"
        >
          Começar
        </a>
      </li>
    </ul>
  </div>
</header>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  menuToggle?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
    menuToggle.setAttribute('aria-expanded', String(!isOpen));
  });

  // Close menu when clicking on a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
      menuToggle?.setAttribute('aria-expanded', 'false');
    });
  });
</script>
