---
const { eyebrow = 'Novo', title, subtitle, ctaLabel = 'Come√ßar', ctaHref = '#cta' } = Astro.props;
---
<section class="px-[5vw] py-10 max-w-5xl mx-auto grid gap-6">
  <p class="text-accent uppercase tracking-[0.12em] text-sm">{eyebrow}</p>
  <h1 class="text-4xl sm:text-5xl font-bold leading-tight">{title}</h1>
  <p class="text-lg text-slate-200/90 max-w-3xl">{subtitle}</p>
  <div class="flex flex-wrap gap-3">
    <a
      href={ctaHref}
      class="px-5 py-3 bg-accent text-bg font-semibold rounded-xl hover:opacity-90 transition"
    >
      {ctaLabel}
    </a>
  </div>
</section>
