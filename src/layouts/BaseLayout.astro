---
import Analytics from '../components/Analytics.astro';
import GTM from '../components/GTM.astro';
import GTMNoScript from '../components/GTMNoScript.astro';
import Posthog from '../components/Posthog.astro';

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
}

const {
  title = 'Landing',
  description = 'High-perf landing',
  canonical,
  ogImage = '/og-image.svg',
} = Astro.props;

// Analytics IDs - set in environment variables
const GA_ID = import.meta.env.PUBLIC_GA_ID || '';
const GTM_ID = import.meta.env.PUBLIC_GTM_ID || 'GTM-WHB72B64';
const GTM_SERVER = import.meta.env.PUBLIC_GTM_SERVER_URL || 'https://stape.go.drroberiobrandao.com';
---
<!DOCTYPE html>
<html lang="pt-BR" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {canonical && <link rel="canonical" href={canonical} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
    />
    <link rel="preload" as="font" type="font/woff2" href="/fonts/inter-var.woff2" crossorigin />
    <link rel="stylesheet" href="/src/styles/global.css" />

    <!-- Analytics & Tracking -->
    <GTM gtmId={GTM_ID} serverUrl={GTM_SERVER} />
    <Analytics gaId={GA_ID} />
    <Posthog />
  </head>
  <body class="min-h-full bg-bg text-text font-sans antialiased">
    <GTMNoScript gtmId={GTM_ID} serverUrl={GTM_SERVER} />
    <slot />
  </body>
</html>
